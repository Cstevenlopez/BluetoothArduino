<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="10dp">
    <TextView
            android:text="@string/resultado"
            android:layout_width="0dp"
            android:layout_height="100dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Encontrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btEncontrar" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="60dp" android:layout_marginTop="24dp"/>
    <Button
            android:text="@string/textoBotonBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btProbarBluetooth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btEncontrar" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.471"/>

</androidx.constraintlayout.widget.ConstraintLayout>